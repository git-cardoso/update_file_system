pasta1 = "/home/jfc-me/Documentos/devs/MuitosTestes/pasta1/"
artefatoData = datetime.now()

for i in os.listdir(pasta1):
     arquivo = f"{pasta1}{i}"
     data = int(time.ctime(os.path.getmtime(arquivo))[9:11])
     deletado = i
     if data != int(f"{artefatoData.day}"):
          os.remove(arquivo)
          print("ARQUIVO DELETADO : %s"%i)
     else:
          print("ARQUIVO MANTIDO : %s"%i)

